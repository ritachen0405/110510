<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E4F4F3">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="583dp"
        android:fontFamily="@font/baumans"
        android:gravity="center"
        android:text="Fish Heaven"
        android:textColor="#3A5673"
        android:textSize="56sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btn_quality"
        android:layout_width="183dp"
        android:layout_height="183dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="212dp"
        android:layout_marginBottom="320dp"
        android:contentDescription="@string/bottom_sheet_behavior"
        android:onClick="btn_quality"
        app:srcCompat="@drawable/water_q"
        tools:ignore="MissingConstraints" />


    <ImageButton
        android:id="@+id/btn_water_changing"
        android:layout_width="183dp"
        android:layout_height="183dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="320dp"
        android:contentDescription="@string/bottom_sheet_behavior"
        android:onClick="btn_waterchange"
        app:srcCompat="@drawable/water_change"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btn_height"
        android:layout_width="183dp"
        android:layout_height="183dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="212dp"
        android:layout_marginBottom="43dp"
        android:contentDescription="@string/bottom_sheet_behavior"
        android:onClick="btn_height"
        app:srcCompat="@drawable/water_height"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btn_feeding"
        android:layout_width="183dp"
        android:layout_height="183dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="44dp"
        android:contentDescription="@string/bottom_sheet_behavior"
        android:onClick="btn_feeding"
        app:srcCompat="@drawable/set_feeding"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btn_leave"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="651dp"
        app:srcCompat="@drawable/leave"
        android:contentDescription="@string/bottom_sheet_behavior"
        tools:ignore="MissingConstraints" />

</RelativeLayout>